{
    "manifest_version": 3,
    "name": "Naughty Words Extension",
    "description": "The internet is a naughty place. This filters out some of those no-no words",
    "version": "1.0",
    "icons": {
        "16": "images/icon.png",
        "32": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
      },
    "action":{
        "default_icon": "images/icon.png",
        "default_popup": "list.html"
    },
    "content_scripts":[{
        "js": ["scripts/findwords.js"],
        "matches":["https://*/*"]
    }]
}